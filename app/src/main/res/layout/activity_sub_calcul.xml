<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff064"
    tools:context="com.example.yurina.calculator_yur2.SubActivityCalcul">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/onelinear"
    android:weightSum="4"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20dp"
        android:id="@+id/onwbtn"
        android:layout_weight="1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="20dp"
        android:layout_weight="1"
        android:id="@+id/twobtn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="20dp"
        android:layout_weight="1"
        android:id="@+id/threebtn"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="20dp"
        android:id="@+id/plusbtn"
        android:layout_weight="1"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/twolinear"
        android:weightSum="4"
        android:layout_below="@+id/onelinear">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="20dp"
            android:id="@+id/fourbtn"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="20dp"
            android:id="@+id/fivebtn"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="20dp"
            android:layout_weight="1"
            android:id="@+id/sixbtn"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20dp"
            android:id="@+id/-btn"
            android:layout_weight="1"
            />


    </LinearLayout>



<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/threelinear"
android:layout_below="@+id/twolinear"
    android:weightSum="4">

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="7"
    android:textSize="20dp"
    android:id="@+id/sevenbtn"
    android:layout_weight="1"
    />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="8"
    android:textSize="20dp"
    android:layout_weight="1"
    android:id="@+id/eightbtn"
    />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="9"
    android:textSize="20dp"
    android:layout_weight="1"
    android:id="@+id/ninebtn"
    />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="*"
    android:textSize="20dp"
    android:layout_weight="1"
    android:id="@+id/multibtn"
    />


</LinearLayout>



<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/fourlinear"
    android:weightSum="4"

android:layout_below="@+id/threelinear">

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0"
    android:textSize="20dp"
    android:id="@+id/zerobtn"
    android:layout_weight="3.83"
    />



<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="/"
    android:textSize="20dp"
    android:layout_weight="0.2"
    android:id="@+id/dividebtn"
    />


</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fivelinear"
        android:weightSum="4"
        android:layout_below="@+id/fourlinear">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop"
            android:textSize="20dp"
            android:id="@+id/stopbtn"
            android:layout_weight="3.83"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="20dp"
            android:layout_weight="0.2"
            android:id="@+id/resultbtn"
            />



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:text="       가즈아~ "
        android:textSize="30dp"
        android:layout_below="@+id/fivelinear"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/text"
        android:layout_below="@+id/text1"/>
</RelativeLayout>
